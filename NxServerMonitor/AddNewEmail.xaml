<Page x:Class="NxServerMonitor.AddNewEmail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NxServerMonitor"
      mc:Ignorable="d" 
      Title="AddNewEmail" Height="270" Width="280">
    <Grid Background="#FFFEFEFE">
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Height="23" Margin="50,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="51" Margin="0,0,50,40" Height="29" Click="save_Click"/>
        <Button x:Name="back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="51" Margin="50,0,0,40" Height="29" Click="back_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="50,52,0,0" TextWrapping="Wrap" Text="Add new Email address" VerticalAlignment="Top"/>
    </Grid>
</Page>